{
  "devDependencies": {
    "cypress": "^13.11.0",
    "mochawesome": "^7.1.3"
  },
  "scripts": {
    "test": "cypress run --headless --browser electron",
    "test:report": "cypress run --headless --browser electron --reporter mochawesome",
    "test:open": "cypress open"
  },
  "cypress": {
    "reporter": "mochawesome",
    "reporterOptions": {
      "reportDir": "cypress/reports",
      "overwrite": false,
      "html": true,
      "json": true
    }
  }
}