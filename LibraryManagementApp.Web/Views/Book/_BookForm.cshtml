@model LibraryManagementApp.Model.Book

<div class="form-group">
    <label class="control-label">Title</label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Description</label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Publish Date</label>
    <div class="input-group date"
         data-provide="datepicker"
         data-date-format="@Thread.CurrentThread.CurrentCulture.DateTimeFormat.ShortDatePattern.ToLower()">
        <input asp-for="PublishDate" class="form-control" type="text" />
        <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
        </div>
    </div>
    <span asp-validation-for="PublishDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="control-label">Genre</label>
    <select asp-for="GenreId" asp-items="ViewBag.PossibleGenres" class="form-control"></select>
    <span asp-validation-for="GenreId" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="control-label">Authors</label>
    <select asp-for="AuthorBooks" asp-items="ViewBag.AllAuthors" class="form-control" multiple></select>
    <span asp-validation-for="AuthorBooks" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="@ViewData["SubmitButtonText"]" class="btn btn-outline-success mt-2" />
</div>
