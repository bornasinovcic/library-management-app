@using LibraryManagementApp.Model

@model List<Book>

<table style="margin-top: 20px;" class="table table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Genre</th>
            <th>Action 1</th>
            <th>Action 2</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td><a asp-action="Details" asp-route-id="@book.Id">@book.Title</a></td>
                <td>@book.Description</td>
                <td>@book.BookGenre?.Name</td>
                <td><a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-primary">Edit</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@book.Id" method="post">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>
